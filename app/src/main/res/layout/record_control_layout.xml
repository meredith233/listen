<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:elevation="10dp"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/control_play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="35dp"
        android:layout_toStartOf="@id/control_record"
        android:background="@drawable/button_circle"
        android:contentDescription="@string/play_button_pic"
        android:scaleType="center"
        android:src="@drawable/ic_chevron_left_black_24dp" />

    <ImageButton
        android:id="@+id/control_record"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_circle"
        android:contentDescription="@string/play_button_pic"
        android:scaleType="center"
        android:src="@drawable/ic_play_arrow_black_24dp" />

    <ImageButton
        android:id="@+id/control_record_play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@id/control_record"
        android:background="@drawable/button_circle"
        android:contentDescription="@string/play_button_pic"
        android:scaleType="center"
        android:src="@drawable/ic_chevron_right_black_24dp" />

    <ImageButton
        android:id="@+id/control_record_exit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@id/control_record_play"
        android:background="@drawable/button_circle"
        android:contentDescription="@string/play_button_pic"
        android:scaleType="center"
        android:src="@drawable/ic_close_black_24dp" />

</RelativeLayout>